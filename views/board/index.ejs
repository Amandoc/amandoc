      rel="stylesheet"
      type="text/css"
    />
      <!-- web font -->
      <link href="https://fonts.googleapis.com/css?family=Open+Sans&display=swap" rel="stylesheet">
      <!-- jquery & bootstrap -->
      <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
      <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
      <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
      <script src="/js/boardscript.js"></script>
  </head>
  <body>
    <div id="wrapper">
      <header id="header">
        <div class="container">
          <div class="logo">
            <a href="/"><img src="images/logo.svg" alt="아만닥" /></a>
          </div>
          <nav id="nav">
            <div class="opener-holder">
              <a href="#" class="nav-opener"><span></span></a>
            </div>
            <a href="/login" class="btn btn-primary rounded">로그인</a>
            <div class="nav-drop">
              <ul>
                <li><a href="/aboutus">소개</a></li>
                <li><a href="/healthtopic">의학정보</a></li>
                <li><a href="/qna">게시판</a></li>
              </ul>
            </div>
          </nav>
        </div>
      </header>
      <section class="visual">
        <div class="container">
          <div class="ellipsis">
            <h2>게시판</h2>
      <table class="board-table table table-sm border-bottom">
        <thead class="thead-light">
          <tr>
            <th scope="col" class="numId">#</th>
            <th scope="col">Title</th>
            <th scope="col" class="views">Views</th> 
            <th scope="col" class="author">Author</th>
            <th scope="col" class="date">Date</th>
          </tr>
        </thead>
        <tbody>
          <% if(qna == null || qna.length == 0){ %>
            <tr>
              <td colspan=5> There is no data to show :( </td>
            </tr>
          <% } %>
          <% qna.forEach(function(qna) { %>
            <tr>
              <td class="numId"><%= qna.numId %></td>
              <td>
                <a href="/qna/<%= qna._id %>"><div class="ellipsis"><%= qna.title %></div></a>
              </td>
              <td class="views"><%= qna.views %></td>
              <td class="author"> <!-- 2 -->
                <div class="ellipsis"><%= qna.reg_id ? qna.reg_id.p_id : "" %></div>
              </td>
              <td class="date">
                <span data-date="<%= qna.createdAt %>"></span> <!-- 1 -->
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
      <div>
        <% if(isAuthenticated){ %>
        <a class="btn btn-primary" href="/qna/new">New</a>
        <% } %>
      </div>
      <nav class="col-8">
        <% 
          var offset = 2;
          var previousBtnEnabled = currentPage>1;
          var nextBtnEnabled = currentPage<maxPage;
        %>
          <ul class="pagination pagination-sm justify-content-center align-items-center h-100 mb-0"> 
            <li class="page-item <%= previousBtnEnabled?'':'disabled' %>">
            <a class="page-link" href="/qna?page=<%= currentPage-1 %>&limit=<%= limit %>" <%= previousBtnEnabled?'':'tabindex=-1' %>>«</a>
          </li>
          <% for(i=1;i<=maxPage;i++){ %>
            <% if(i==1 || i==maxPage || (i>=currentPage-offset && i<=currentPage+offset)){ %>
              <li class="page-item <%= currentPage==i?'active':'' %>"><a class="page-link" href="/qna?page=<%= i %>&limit=<%= limit %>"> <%= i %> </a></li>
            <% } else if(i==2 || i==maxPage-1){ %>
              <li><a class="page-link">...</a></li>
            <% } %>
          <% } %>
          <li class="page-item <%= nextBtnEnabled?'':'disabled' %>">
            <a class="page-link" href="/qna?page=<%= currentPage+1 %>&limit=<%= limit %>" <%= nextBtnEnabled?'':'tabindex=-1' %>>»</a>
          </li>
        </ul>
      </nav>
  </div>
</div>
</div>
</div>
  </section>
